{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "CommonJS",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "target": "ESNext",
        "allowJs": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "inlineSourceMap": true,
        "moduleResolution": "Node"
    },
    "exclude": [
        "node_modules",
        "coverage"
    ]
}